    function drawChart() {
    var data = new google.visualization.DataTable();
      data.addColumn('string', 'Topping');
      data.addColumn('number', 'Percent');
      data.addRows([
        ['World', <%=recoveredPerW%> ],
        ['<%=countryDisplay%>', <%=recoveredPer%> ],
      ]);


      var options = {
        'title': 'Recovery Rate Comparasion',
        'width': 320,
